//- Homepage Markup
extend ./templates/base

//- use the 'block body' if you need to set a page-level class on the <body> tag
block body
    - var bodyClass = 'homepage';

block content
    .main-container
        +h1({text:'Welcome to AwayDay China'})
        p
          img.logo(src="images/spinner.gif", width="128px", heighe="128px")
        p
          input#barcode(type="text", name="barcode")
    code.version v0.0.1

    #goodie.modal.fade.bs-example-modal-lg(role="dialog")
      .modal-dialog.modal-lg
        .modal-content
          .modal-header
            h4.modal-title="Collect your gift"
          .modal-body
            img#goodieImg
